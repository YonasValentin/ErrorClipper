{
  "name": "errorclipper",
  "displayName": "ErrorClipper",
  "description": "Easily copy error messages to your clipboard.",
  "version": "0.4.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/YonasValentin/ErrorClipper"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "publisher": "YonasValentinMougaardKristensen",
  "icon": "resources/ErrorClipperLogo.png",
  "contributes": {
    "commands": [
      {
        "command": "errorclipper.activate",
        "title": "Activate ErrorClipper"
      },
      {
        "command": "errorclipper.copyErrorMessage",
        "title": "Copy Error Message"
      },
      {
        "command": "errorclipper.copyErrorAndCode",
        "title": "Copy Error and Code"
      }
    ],
    "languages": [
      {
        "id": "plaintext",
        "extensions": [
          "*"
        ],
        "aliases": [
          "Plain Text",
          "text"
        ]
      }
    ],
    "localizations": [
      {
        "languageId": "en",
        "languageName": "English",
        "translations": [
          {
            "id": "vscode",
            "path": "./i18n/en.json"
          }
        ]
      },
      {
        "languageId": "zh-cn",
        "languageName": "简体中文",
        "translations": [
          {
            "id": "vscode",
            "path": "./i18n/zh-cn.json"
          }
        ]
      }
    ]
  },
  "keywords": [
    "error handling",
    "copy error messages",
    "clipboard tools",
    "debugging",
    "bug fixing",
    "exception handling",
    "error fixing",
    "troubleshoot",
    "linting",
    "code quality",
    "refactoring",
    "developer productivity",
    "automation tools",
    "workflow automation",
    "coding efficiency",
    "automated issue creation",
    "error analysis",
    "VS Code debugging",
    "code troubleshooting",
    "developer tools"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "author": "Yonas Valentin Mougaard Kristensen <yonasmougaard@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "dotenv": "^16.4.5",
    "posthog-node": "^4.0.1",
    "uuid": "^10.0.0"
  }
}
